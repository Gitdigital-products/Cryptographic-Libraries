#ifndef CRYPTO_LIB_HASH_H
#define CRYPTO_LIB_HASH_H

#include <stddef.h>
#include <stdint.h>

#ifdef __cplusplus
extern "C" {
#endif

/**
 * @brief Compute SHA-256 hash of a message (one-shot)
 * 
 * @param out Output buffer (must be at least 32 bytes)
 * @param in Input message
 * @param inlen Length of input message in bytes
 * @return int 0 on success, non-zero on error
 */
int crypto_hash_sha256(uint8_t out[32], const uint8_t *in, size_t inlen);

/**
 * @brief Opaque SHA-256 context structure for incremental hashing
 */
typedef struct sha256_ctx sha256_ctx;

/**
 * @brief Initialize a new SHA-256 context
 * 
 * @return sha256_ctx* Pointer to new context, NULL on allocation failure
 */
sha256_ctx* sha256_init(void);

/**
 * @brief Update SHA-256 hash with more data
 * 
 * @param ctx SHA-256 context (must be initialized)
 * @param in Input data
 * @param inlen Length of input data in bytes
 * @return int 0 on success, non-zero on error
 */
int sha256_update(sha256_ctx *ctx, const uint8_t *in, size_t inlen);

/**
 * @brief Finalize SHA-256 hash and get result
 * 
 * @param ctx SHA-256 context (must be initialized)
 * @param out Output buffer (must be at least 32 bytes)
 * @return int 0 on success, non-zero on error
 */
int sha256_final(sha256_ctx *ctx, uint8_t out[32]);

/**
 * @brief Free SHA-256 context and zeroize memory
 * 
 * @param ctx SHA-256 context to free (can be NULL)
 */
void sha256_free(sha256_ctx *ctx);

/**
 * @brief Clone SHA-256 context
 * 
 * @param dst Destination context (must be allocated)
 * @param src Source context
 * @return int 0 on success, non-zero on error
 */
int sha256_clone(sha256_ctx *dst, const sha256_ctx *src);

#ifdef __cplusplus
}
#endif

#endif // CRYPTO_LIB_HASH_H