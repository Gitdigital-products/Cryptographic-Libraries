#include "sha2.h"
#include <string.h>
#include <stdint.h>
#include <stddef.h>

// Constants as defined in FIPS 180-4
static const uint32_t K[64] = {
    0x428a2f98, 0x71374491, 0xb5c0fbcf, 0xe9b5dba5,
    0x3956c25b, 0x59f111f1, 0x923f82a4, 0xab1c5ed5,
    0xd807aa98, 0x12835b01, 0x243185be, 0x550c7dc3,
    0x72be5d74, 0x80deb1fe, 0x9bdc06a7, 0xc19bf174,
    0xe49b69c1, 0xefbe4786, 0x0fc19dc6, 0x240ca1cc,
    0x2de92c6f, 0x4a7484aa, 0x5cb0a9dc, 0x76f988da,
    0x983e5152, 0xa831c66d, 0xb00327c8, 0xbf597fc7,
    0xc6e00bf3, 0xd5a79147, 0x06ca6351, 0x14292967,
    0x27b70a85, 0x2e1b2138, 0x4d2c6dfc, 0x53380d13,
    0x650a7354, 0x766a0abb, 0x81c2c92e, 0x92722c85,
    0xa2bfe8a1, 0xa81a664b, 0xc24b8b70, 0xc76c51a3,
    0xd192e819, 0xd6990624, 0xf40e3585, 0x106aa070,
    0x19a4c116, 0x1e376c08, 0x2748774c, 0x34b0bcb5,
    0x391c0cb3, 0x4ed8aa4a, 0x5b9cca4f, 0x682e6ff3,
    0x748f82ee, 0x78a5636f, 0x84c87814, 0x8cc70208,
    0x90befffa, 0xa4506ceb, 0xbef9a3f7, 0xc67178f2
};

// Initial hash values (first 32 bits of fractional parts of square roots of first 8 primes)
static const uint32_t H0[8] = {
    0x6a09e667, 0xbb67ae85, 0x3c6ef372, 0xa54ff53a,
    0x510e527f, 0x9b05688c, 0x1f83d9ab, 0x5be0cd19
};

// Internal utility functions (all constant-time)
static inline uint32_t rotr(uint32_t x, uint32_t n) {
    // Constant-time right rotate
    return (x >> n) | (x << (32 - n));
}

static inline uint32_t ch(uint32_t x, uint32_t y, uint32_t z) {
    // Choice function: if x then y else z
    return (x & y) ^ (~x & z);
}

static inline uint32_t maj(uint32_t x, uint32_t y, uint32_t z) {
    // Majority function
    return (x & y) ^ (x & z) ^ (y & z);
}

static inline uint32_t sigma0(uint32_t x) {
    return rotr(x, 2) ^ rotr(x, 13) ^ rotr(x, 22);
}

static inline uint32_t sigma1(uint32_t x) {
    return rotr(x, 6) ^ rotr(x, 11) ^ rotr(x, 25);
}

static inline uint32_t gamma0(uint32_t x) {
    return rotr(x, 7) ^ rotr(x, 18) ^ (x >> 3);
}

static inline uint32_t gamma1(uint32_t x) {
    return rotr(x, 17) ^ rotr(x, 19) ^ (x >> 10);
}

// Convert big-endian bytes to uint32_t
static inline uint32_t be32dec(const uint8_t *bytes) {
    return ((uint32_t)bytes[0] << 24) |
           ((uint32_t)bytes[1] << 16) |
           ((uint32_t)bytes[2] << 8)  |
           ((uint32_t)bytes[3]);
}

// Convert uint32_t to big-endian bytes
static inline void be32enc(uint8_t *bytes, uint32_t val) {
    bytes[0] = (uint8_t)(val >> 24);
    bytes[1] = (uint8_t)(val >> 16);
    bytes[2] = (uint8_t)(val >> 8);
    bytes[3] = (uint8_t)val;
}

// Compression function - core of SHA-256
static void sha256_compress(uint32_t state[8], const uint8_t block[64]) {
    uint32_t W[64];
    uint32_t a, b, c, d, e, f, g, h;
    uint32_t T1, T2;
    
    // 1. Prepare message schedule W[0..15] from block (big-endian)
    for (int i = 0; i < 16; i++) {
        W[i] = be32dec(&block[i * 4]);
    }
    
    // 2. Prepare message schedule W[16..63]
    for (int i = 16; i < 64; i++) {
        W[i] = gamma1(W[i-2]) + W[i-7] + gamma0(W[i-15]) + W[i-16];
    }
    
    // 3. Initialize working variables
    a = state[0];
    b = state[1];
    c = state[2];
    d = state[3];
    e = state[4];
    f = state[5];
    g = state[6];
    h = state[7];
    
    // 4. Perform compression loop
    for (int i = 0; i < 64; i++) {
        T1 = h + sigma1(e) + ch(e, f, g) + K[i] + W[i];
        T2 = sigma0(a) + maj(a, b, c);
        h = g;
        g = f;
        f = e;
        e = d + T1;
        d = c;
        c = b;
        b = a;
        a = T1 + T2;
    }
    
    // 5. Update state
    state[0] += a;
    state[1] += b;
    state[2] += c;
    state[3] += d;
    state[4] += e;
    state[5] += f;
    state[6] += g;
    state[7] += h;
    
    // 6. Clear sensitive data from stack
    // Note: Compiler may optimize this away, but we try
    a = b = c = d = e = f = g = h = T1 = T2 = 0;
    memset(W, 0, sizeof(W));
}

// Main SHA-256 function
int crypto_hash_sha256(uint8_t out[32], const uint8_t *in, size_t inlen) {
    uint32_t state[8];
    uint8_t block[64];
    size_t i;
    uint64_t total_bits;
    
    // 1. Initialize state with initial hash values
    memcpy(state, H0, sizeof(H0));
    
    // 2. Process complete 512-bit (64-byte) blocks
    for (i = 0; i + 64 <= inlen; i += 64) {
        sha256_compress(state, &in[i]);
    }
    
    // 3. Handle the final (possibly partial) block
    size_t remaining = inlen - i;
    memcpy(block, &in[i], remaining);
    
    // Append '1' bit (byte 0x80)
    block[remaining] = 0x80;
    
    // If there's not enough space for the length (8 bytes), process this block
    if (remaining >= 56) {  // 64 - 8 = 56
        // Zero out the rest of the block
        memset(&block[remaining + 1], 0, 64 - remaining - 1);
        sha256_compress(state, block);
        
        // Prepare a new block of zeros
        memset(block, 0, 56);
    } else {
        // Zero out between '1' bit and length
        memset(&block[remaining + 1], 0, 56 - remaining - 1);
    }
    
    // 4. Append total bit length as 64-bit big-endian integer
    total_bits = (uint64_t)inlen * 8;
    for (int j = 0; j < 8; j++) {
        block[56 + j] = (uint8_t)(total_bits >> (56 - j * 8));
    }
    
    // Process the final block
    sha256_compress(state, block);
    
    // 5. Convert state to big-endian bytes in output
    for (i = 0; i < 8; i++) {
        be32enc(&out[i * 4], state[i]);
    }
    
    // 6. Clear sensitive data
    memset(state, 0, sizeof(state));
    memset(block, 0, sizeof(block));
    
    return 0; // Success
}